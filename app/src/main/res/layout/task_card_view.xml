<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/idCardBackgroundLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/idCheckImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_check_false_icon"
            app:layout_constraintStart_toStartOf="@id/idCardBackgroundLayout"
            app:layout_constraintTop_toTopOf="@id/idCardBackgroundLayout"
            app:layout_constraintBottom_toBottomOf="@id/idCardBackgroundLayout"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idTaskTitle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="Task Title"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:background="@drawable/rounded_corner_shape"
            android:textSize="25sp"
            android:paddingStart="15dp"
            android:inputType="textMultiLine"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/idCheckImage"
            app:layout_constraintBottom_toBottomOf="@id/idCardBackgroundLayout"
            app:layout_constraintTop_toTopOf="@id/idCardBackgroundLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>